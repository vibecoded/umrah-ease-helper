
{
  "manifest_version": 3,
  "name": "Umrah Assistant",
  "version": "1.0.0",
  "description": "A comprehensive tool to simplify planning and performing Umrah",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "Umrah Assistant"
  },
  "permissions": [
    "storage",
    "geolocation",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "umrah-assistant@example.com"
    }
  }
}
